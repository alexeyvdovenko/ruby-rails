<%- model_class = Friendship -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
    <th><%= model_class.human_attribute_name(:name) %></th>
    <th><%= model_class.human_attribute_name(:image) %></th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>

<%  #binding.pry %>
<% session[:friend].each { |friends| %>
      <tr>
        <td><%=h friends['name'] %></td>
        <td><%=h image_tag(friends['image']) %></td>
        <td><%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      friendships_path(friends),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %></td>
      </tr>
<% } %>
  </tbody>
</table>
